<mapper namespace="LoginFormManager">

    <!-- jdbcType=VARCHAR needed for login parameter to correctly handle 
        cases where login could be null with some DBMS (at least Derby) -->
    <select id="getNbConnect" resultType="_integer">
        SELECT nb_connect FROM Users_FormConnectionFailed 
        WHERE login = #{login, jdbcType=VARCHAR}
    </select>
    
    <delete id="purgeRecords">
        DELETE FROM Users_FormConnectionFailed WHERE last_connect &lt; #{threshold, javaType=java.sql.Timestamp}
    </delete>
    
</mapper>
