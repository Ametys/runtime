<mapper namespace="Subscribers" >

  <resultMap type="org.ametys.plugins.newsletter.daos.Subscriber" id="subscriberResult">
        <result property="email" column="Email"/>
    	<result property="siteName" column="Site_Name"/>
    	<result property="categoryId" column="Category"/>
    	<result property="subscribedAt" column="Subscribed_At"/>
    	<result property="token" column="Token"/>
  </resultMap>

  <sql id="getSubscribers">
    SELECT Email, Site_Name, Category, Subscribed_At, Token
    FROM Newsletter_Subscribers
  </sql>

  <select id="getSubscribers" resultMap="subscriberResult">
    <include refid="getSubscribers"/>
    ORDER BY Email
  </select>
  
  <select id="getSubscriber" resultMap="subscriberResult">
    <include refid="getSubscribers"/>
     WHERE Site_Name = #{siteName} and Category = #{category} and Email = #{email}
  </select>
  
  <select id="getSubscriberByToken" parameterType="map" resultMap="subscriberResult">
    <include refid="getSubscribers"/>
     WHERE Token = #{token}
  </select>

  <select id="getSubscribersByCategory" parameterType="map" resultMap="subscriberResult">
  	<include refid="getSubscribers"/>
    WHERE Site_Name = #{siteName} and Category = #{category}
  </select>

  <select id="getSubscriptionsByEmail" parameterType="map" resultMap="subscriberResult">
    <include refid="getSubscribers"/>
    WHERE Site_Name = #{siteName} and Email = #{email}
  </select>
  
  <select id="getSubscribersCount" parameterType="map" resultType="int">
    SELECT count(*) FROM Newsletter_Subscribers
    WHERE Site_Name = #{siteName} and Category = #{category}
  </select>

  <insert id="subscribe" parameterType="org.ametys.plugins.newsletter.daos.Subscriber">
    INSERT INTO Newsletter_Subscribers (Email, Site_Name, Category, Subscribed_At, Token)
    VALUES (#{email}, #{siteName}, #{categoryId}, #{subscribedAt}, #{token})
  </insert>

  <delete id="unsubscribe" parameterType="string">
	DELETE FROM Newsletter_Subscribers 
	WHERE Token = #{value}
  </delete>
  
  <delete id="removeSubscriptionsByEmail" parameterType="java.util.Map">
	DELETE FROM Newsletter_Subscribers 
	WHERE Site_Name = #{siteName} and Email = #{email}
  </delete>
  
  <delete id="empty" parameterType="java.util.Map">
	DELETE FROM Newsletter_Subscribers 
	WHERE Category = #{categoryId} AND Site_Name = #{siteName}
  </delete>
</mapper>
