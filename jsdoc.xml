<project name="runtime" default="jsdoc"
         xmlns:ametys="antlib:org.ametys.tools"
         xmlns:clover="antlib:com.atlassian.clover"
         xmlns:ivy="antlib:org.apache.ivy.ant">
         
    <property name="temp.dir" location="temp"/>
    <property name="jsdoc.dir" location="../../../deliver/jsdoc"/>
    <property name="jsdoc-build" location="${jsdoc.dir}/jsdoc.xml"/>
	
	<import file="${jsdoc-build}"/>
    
    <target name="copyjsfiles">
        <copy todir="${temp.dir}/kernel">
               <fileset dir="main/kernel/resources/js"/>
        </copy>
        <copy todir="${temp.dir}/plugin-core">
               <fileset dir="main/plugin-core/resources/js"/>
        </copy>
        <copy todir="${temp.dir}/workspace-admin">
               <fileset dir="main/workspace-admin/resources/js"/>
        </copy>
    </target>
</project>
