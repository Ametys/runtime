<project name="generate-font" default="generate">
	
	<target name="generate-font">
        <exec executable="fontforge" failonerror="true">
            <arg value="-script"/>
            <arg value="generate-font.py"/>
            <arg value="${svg.dir}"/>
            <arg value="${font.dir}"/>
            <arg value="${font.name}"/>
            <arg value="${font.family}"/>
            <arg value="${css.prefix}"/>
        </exec>
	</target>
	
	<target name="generate">
		<antcall target="generate-font">
            <param name="svg.dir" value="ametys"/>
            <param name="font.dir" value="../main/plugin-core-ui/resources/font/ametys"/>
            <param name="font.name" value="Ametys"/>
            <param name="font.family" value="Ametys"/>
            <param name="css.prefix" value="ametys"/>
		</antcall>
	</target>
</project>