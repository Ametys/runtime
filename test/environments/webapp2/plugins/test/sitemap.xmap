<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

    <map:components>
        <map:transformers>
            <map:transformer name="minimizer" src="org.ametys.plugins.core.ui.minimize.MinimizeTransformer" />
        </map:transformers>
        
        <map:readers>
            <map:reader name="css" src="org.ametys.plugins.core.ui.minimize.MinimizeCSSReader"/>
            <map:reader name="js" src="org.ametys.plugins.core.ui.minimize.MinimizeJSReader"/>
            <map:reader name="less" src="org.ametys.plugins.core.ui.resources.LessResourceReader"/>
            <map:reader name="sass" src="org.ametys.plugins.core.ui.resources.SassResourceReader"/>
        </map:readers>
    </map:components>

	<map:pipelines>
        <map:pipeline>
	        <map:match pattern="minimize/*.html">
	            <map:generate src="pages/minimize/{1}.html"/>
	            <map:transform type="minimizer" src="{request:contextPath}{request-attr:workspaceURI}" />
	            <map:serialize type="xhtml"/>
	        </map:match>
	        
	        <map:match pattern="resources-minimized/*.css">
	            <map:read type="css" src="{1}" />
	        </map:match>
	        
	        <map:match pattern="resources-minimized/*.js">
	            <map:read type="js" src="{1}" />
	        </map:match>

            <!-- LESS Files -->
            <map:match pattern="resources/**.less">
                <map:read type="less" src="resources/{1}.less" />
            </map:match>
            
            <!-- SASS Files -->
            <map:match pattern="resources/**.sass">
                <map:read type="sass" src="resources/{1}.sass" />
            </map:match>
            <map:match pattern="resources/**.scss">
                <map:read type="sass" src="resources/{1}.scss" />
            </map:match>
            
        </map:pipeline>
    </map:pipelines>
</map:sitemap>
