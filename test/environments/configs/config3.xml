<!-- 
    DATASOURCE CONFIG
    USER LDAP CONFIG
    GROUP DRIVEN LDAP CONFIG
    USER DRIVEN LDAP CONFIG
 -->
<config>
<runtime.datasource.core.jdbc.user>Ametys_Runtime</runtime.datasource.core.jdbc.user>
<runtime.datasource.core.jdbc.driver>com.mysql.jdbc.Driver</runtime.datasource.core.jdbc.driver>
<runtime.datasource.core.jdbc.passwd>Ametys_Runtime</runtime.datasource.core.jdbc.passwd>
<runtime.datasource.core.jdbc.url>jdbc:mysql://mysql-dev.anyware.corp/Ametys_Runtime_Test</runtime.datasource.core.jdbc.url>
<runtime.authentication.basic.realm>realm</runtime.authentication.basic.realm>
<runtime.upload.max-size>10000000</runtime.upload.max-size>
<runtime.upload.dir>WEB-INF/data/uploads</runtime.upload.dir>
<runtime.debug.ui>false</runtime.debug.ui>
<runtime.cache.xslt>false</runtime.cache.xslt>

<runtime.datasource.core.ldap.baseUrl>ldap://ldap-dev.anyware.corp</runtime.datasource.core.ldap.baseUrl>
<runtime.datasource.core.ldap.useSSL>false</runtime.datasource.core.ldap.useSSL>
<runtime.datasource.core.ldap.baseDN>dc=ametys-test-groups,dc=org</runtime.datasource.core.ldap.baseDN>
<runtime.datasource.core.ldap.authMethod>none</runtime.datasource.core.ldap.authMethod>
<runtime.datasource.core.ldap.adminDN></runtime.datasource.core.ldap.adminDN>
<runtime.datasource.core.ldap.adminPasswd></runtime.datasource.core.ldap.adminPasswd>
<runtime.datasource.core.ldap.aliasDereferencing>always</runtime.datasource.core.ldap.aliasDereferencing>
<runtime.datasource.core.ldap.followReferrals>false</runtime.datasource.core.ldap.followReferrals>


<runtime.users.ldap.peopleDN>ou=people</runtime.users.ldap.peopleDN>
<runtime.users.ldap.baseFilter>(objectclass=inetOrgPerson)</runtime.users.ldap.baseFilter>
<runtime.users.ldap.scope>sub</runtime.users.ldap.scope>
<runtime.users.ldap.loginAttr>uid</runtime.users.ldap.loginAttr>
<runtime.users.ldap.firstnameAttr>givenName</runtime.users.ldap.firstnameAttr>
<runtime.users.ldap.lastnameAttr>sn</runtime.users.ldap.lastnameAttr>
<runtime.users.ldap.emailAttr>mail</runtime.users.ldap.emailAttr>
<runtime.users.ldap.serverSideSorting>true</runtime.users.ldap.serverSideSorting>

<runtime.groups.ldap.groupDN>ou=groups</runtime.groups.ldap.groupDN>
<runtime.groups.ldap.filter>(objectclass=groupOfNames)</runtime.groups.ldap.filter>
<runtime.groups.ldap.scope>sub</runtime.groups.ldap.scope>
<runtime.groups.ldap.id>cn</runtime.groups.ldap.id>
<runtime.groups.ldap.description>description</runtime.groups.ldap.description>
<runtime.groups.ldap.member>member</runtime.groups.ldap.member>

<smtp.mail.host>smtp.anyware.corp</smtp.mail.host>
<smtp.mail.port>993</smtp.mail.port>
<smtp.mail.user></smtp.mail.user>
<smtp.mail.password></smtp.mail.password>
<smtp.mail.from>test@ametys.org</smtp.mail.from>
<smtp.mail.sysadminto>ametys@ametys.org</smtp.mail.sysadminto>
</config>