<ivy-module version="1.0">
  <info organisation="org.ametys.runtime" module="runtime" branch="LTE">
    <license url="http://www.apache.org/licenses/LICENSE-2.0" name="ASL2"/>
    <description homepage="http://www.ametys.org/">
Open source web application framework based on Apache Cocoon.
    </description>
  </info>
  
  <configurations>
    <conf name="common_dependencies" description="Root configuration for dependencies (runtime or compile)" visibility="private"/>

	<conf name="compile_dependencies" extends="common_dependencies" description="Dependencies for compiling this module"/>
    
	<conf name="runtime_dependencies" extends="common_dependencies" description="Dependencies for running this module"/>
	<conf name="runtime" extends="runtime_dependencies" description="Artificat for runtime only, with runtime dependencies"/>
	<conf name="default" extends="runtime" description="Artificat for runtime, with resources and runtime dependencies"/>

	<conf name="test-env" extends="runtime" description="Artificat for testing a runtime dependent application"/>

	<conf name="test" extends="runtime" description="Configuration used during unit test of artifacts" visibility="private"/>
    <conf name="deliver" description="Configuration used during the deliver process of artifacts" visibility="private"/>
  </configurations>
  
  <publications>
    <artifact name="ametys-runtime" type="jar" ext="jar" conf="runtime, test-env"/>
    <artifact name="ametys-runtime" type="javadoc" ext="jar" conf="runtime"/>
    <artifact name="ametys-runtime" type="source" ext="jar" conf="runtime"/>
    
    <artifact name="ametys-runtime-scripts" type="script" ext="zip" conf="runtime"/>

    <artifact name="ametys-runtime-resources" type="jar" ext="jar" conf="default"/>
    <artifact name="ametys-runtime-resources" type="resource" ext="zip" conf="default"/>
    
    <artifact name="ametys-runtime-test-env" type="jar" ext="jar" conf="test-env"/>
    <artifact name="ametys-runtime-test-env" type="javadoc" ext="jar" conf="test-env"/>
    <artifact name="ametys-runtime-test-env" type="source" ext="jar" conf="test-env"/>
  </publications>
  
  <dependencies>
  	<!-- Deliver -->
    <dependency org="org.ametys.tools" name="tools" rev="latest.integration" conf="deliver->default"/>
    <dependency org="atlassian" name="clover" rev="2.6.3" conf="deliver->default"/>
    
    <!-- Common -->
    <dependency org="apache" name="commons-dbcp" rev="1.4" conf="common_dependencies->default"/>
    <dependency org="apache" name="cocoon" rev="2.1.11-ametys-3" conf="common_dependencies->serializers,html"/>
    <dependency org="apache" name="commons-compress" rev="1.3" conf="common_dependencies->default"/>
    <dependency org="apache" name="commons-codec" rev="1.5" conf="common_dependencies->default"/>
    <dependency org="apache" name="commons-lang" rev="2.6" conf="common_dependencies->default"/>
    <dependency org="apache" name="ibatis" rev="2.3.0" conf="common_dependencies->default"/>
    <dependency org="codehaus" name="jackson" rev="1.0.0" conf="common_dependencies->default"/>
	<dependency org="coobird" name="thumbnailator" rev="0.3.10" conf="common_dependencies->default"/>
	<dependency org="javax.mail" name="mail" rev="1.4.3" conf="common_dependencies->default"/>
    <dependency org="joda-time" name="joda-time" rev="1.6" conf="common_dependencies->default"/>
	<dependency org="jsoup" name="jsoup" rev="1.6.1" conf="common_dependencies->default"/>
    <dependency org="rrd4j" name="rrd4j" rev="2.0.6" conf="common_dependencies->default"/>
	<dependency org="yahoo" name="yuicompressor" rev="2.4.6" conf="common_dependencies->default"/>
	
	<dependency org="slf4j" name="slf4j" rev="1.6.4" conf="compile_dependencies->api; runtime_dependencies->log4j12"/>
	 
	<!-- Runtime -->
    <dependency org="minaret" name="datedFileAppender" rev="1.0.2" conf="runtime_dependencies->default"/>
    <dependency org="sencha" name="extjs4" rev="4.1.0" conf="runtime_dependencies->default"/>

	<!-- Compile and test -->
    <dependency org="javax.servlet" name="servlet-api" rev="2.4" conf="compile_dependencies->default"/>
	<dependency org="apache" name="fop" rev="0.95" conf="compile_dependencies,test->default"/>
    <dependency org="ja-sig" name="cas-client-core" rev="3.1.10" conf="compile_dependencies,test->default"/>
    <dependency org="samba" name="jcifs" rev="1.2.22" conf="compile_dependencies,test->default"/>
    <dependency org="mysql" name="mysql-connector-java" rev="5.1.6" conf="test->default"/>
    <dependency org="oracle" name="oracle-connector-java" rev="10.2.0.4.0" conf="test->default"/>
    <dependency org="postgres" name="postgres-connector-java" rev="8.4-702" conf="test->default"/>
    <dependency org="apache" name="derby" rev="10.5.3.0_1" conf="test->default"/>

    <dependency org="junit" name="junit" rev="4.4" conf="test,test-env->default"/>
    
    <!-- exclude servlet.jar from runtime configuration -->
    <exclude org="javax.servlet" module="servlet-api" conf="runtime_dependencies"/> 
  </dependencies>
</ivy-module>
