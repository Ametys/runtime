<ivy-module version="1.0">
  <info organisation="org.ametys.runtime"
        module="runtime">
    <license url="http://www.apache.org/licenses/LICENSE-2.0" name="ASL2"/>
    <description homepage="http://www.ametys.org/">
Open source web application framework based on Apache Cocoon.
    </description>
  </info>
  <configurations>
    <conf name="default"  description="Equivalent to runtime configuration"/>
    <conf name="runtime" extends="default" description="Runtime configuration"/>
    <conf name="resources" extends="runtime" description="Runtime configuration with resources"/>
    <conf name="test-env" extends="default" description="Provides testing environment"/>
    <conf name="cas" extends="default" description="CAS configuration"/>
    <conf name="jcifs" extends="default" description="JCIFS configuration"/>
    <conf name="fop" extends="default" description="FOP configuration"/>
    <conf name="compile" extends="cas,jcifs,fop" description="Used only for compilation" visibility="private"/>
    <conf name="test" extends="compile,runtime" description="Unit testing configuration" visibility="private"/>
    <conf name="deliver" visibility="private"/>
  </configurations>
  <publications>
    <artifact name="ametys-runtime" type="jar" ext="jar" conf="default"/>
    <artifact name="ametys-runtime" type="javadoc" ext="jar" conf="default"/>
    <artifact name="ametys-runtime" type="source" ext="jar" conf="default"/>
    <artifact name="ametys-runtime-test-env" type="jar" ext="jar" conf="test-env"/>
    <artifact name="ametys-runtime-test-env" type="javadoc" ext="jar" conf="test-env"/>
    <artifact name="ametys-runtime-test-env" type="source" ext="jar" conf="test-env"/>
    <artifact name="ametys-runtime-resources" type="jar" ext="jar" conf="resources"/>
    
    <!-- Artifact containing resources used directly by Apache HTTPD -->
    <artifact name="ametys-runtime-resources" type="resource" ext="zip" conf="resources"/>
    <!-- TODO add SQL scripts in "sql" type -->
  </publications>
  <dependencies>
    <dependency org="org.ametys.tools" name="tools" rev="latest.integration" conf="deliver->default"/>
    <dependency org="atlassian" name="clover" rev="2.6.3" conf="deliver->default"/>
    
    <dependency org="apache" name="commons-dbcp" rev="1.2.2" conf="default->default"/>
    <dependency org="apache" name="cocoon" rev="2.1.11-ametys" conf="default->serializers"/>
    <dependency org="apache" name="commons-codec" rev="1.3" conf="default"/>
    <dependency org="apache" name="commons-lang" rev="2.4" conf="default"/>
    <dependency org="apache" name="ibatis" rev="2.3.0" conf="default"/>
    <dependency org="javax.servlet" name="servlet-api" rev="2.4" conf="compile->default"/>
    <dependency org="joda-time" name="joda-time" rev="1.6" conf="default->default"/>
    <dependency org="rrd4j" name="rrd4j" rev="2.0.6" conf="default->default"/>
    <dependency org="codehaus" name="jackson" rev="1.0.0" conf="default->default"/>
	<dependency org="javax.mail" name="mail" rev="1.4.3" conf="default->default;"/>
	
	<!-- fop configuration -->
	<dependency org="apache" name="fop" rev="0.95" conf="fop->default"/>
	
    <!-- cas configuration -->
    <dependency org="ja-sig" name="cas-client" rev="2.0.11" conf="cas->default"/>

    <!-- jcifs configuration -->
    <dependency org="samba" name="jcifs" rev="1.2.22" conf="jcifs->default"/>

    <!-- runtime configuration -->
    <dependency org="minaret" name="datedFileAppender" rev="1.0.2" conf="runtime->default"/>
    <dependency org="ext" name="extjs" rev="3.1.2.20100309-1300-patch" conf="runtime->default"/>
    
    <!-- test configuration -->
    <dependency org="junit" name="junit" rev="4.4" conf="test,test-env->default"/>
    <dependency org="mysql" name="mysql-connector-java" rev="5.1.6" conf="test->default"/>
  </dependencies>
</ivy-module>
